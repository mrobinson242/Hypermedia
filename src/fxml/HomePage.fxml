<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.Pane?>

<fx:root prefHeight="600.0" type="Pane" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar fx:id="_menuBar" prefHeight="30.0" prefWidth="1200.0" styleClass="menuBarPane">
         <menus>
            <Menu fx:id="_fileMenu" mnemonicParsing="false" styleClass="menu" text="File">
               <items>
                  <MenuItem fx:id="_newFileMenuItem" mnemonicParsing="false" text="New File" />
                  <MenuItem fx:id="_openFileMenuItem" mnemonicParsing="false" text="Open File" />
                  <MenuItem fx:id="_importPrimaryVideoItem" mnemonicParsing="false" text="Import Primary Video" />
                  <MenuItem fx:id="_importSecondaryVideoItem" mnemonicParsing="false" text="Import Secondary Video" />
                  <MenuItem fx:id="_saveMenuItem" mnemonicParsing="false" text="Save" />
                  <MenuItem fx:id="_exitMenuItem" mnemonicParsing="false" text="Exit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Option">
               <items>
                  <MenuItem fx:id="_createLinkMenuItem" mnemonicParsing="false" text="Create Link" />
                  <MenuItem fx:id="_deleteLinkMenuItem" mnemonicParsing="false" text="Delete Link" />
                  <MenuItem fx:id="_playVideoMenuItem" mnemonicParsing="false" text="Play Video" />
                  <MenuItem fx:id="_pauseVideoMenuItem" mnemonicParsing="false" text="Pause Video" />
                  <MenuItem fx:id="_stopVideoMenuItem" mnemonicParsing="false" text="Stop Video" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="Help" />
         </menus>
      </MenuBar>
      <Pane fx:id="_tabPane" layoutY="30.0" prefHeight="50.0" prefWidth="1200.0" styleClass="tabPane">
         <children>
            <ToggleButton fx:id="_videoToolButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" styleClass="tabButton" text="Video Tool" textAlignment="CENTER" wrapText="true" />
            <ToggleButton fx:id="_videoPlayerButton" layoutX="101.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" styleClass="tabButton" text="Video Player" textAlignment="CENTER" wrapText="true" />
            <ToggleButton fx:id="_mp4ConverterButton" layoutX="202.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" styleClass="tabButton" text="MP4 Converter" textAlignment="CENTER" wrapText="true" />
         </children>
      </Pane>
      <Pane fx:id="_contentPane" layoutY="80.0" prefHeight="520.0" prefWidth="1200.0" styleClass="contentPane" />
   </children>
</fx:root>
